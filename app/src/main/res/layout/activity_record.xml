<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nandan.a173050047_recorddata.Record">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:theme="?attr/actionBarTheme" >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:src="@mipmap/ic_launcherweb"
            />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/switchState"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:gravity="center"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="14dp" />
        <Button
            android:id="@+id/recordbt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Record"
            />

    </android.support.v7.widget.Toolbar>

    <Switch
        android:id="@+id/switchState"
        android:layout_width="368dp"
        android:layout_height="80dp"
        android:text="Start Recording"
        android:layout_below="@+id/toolbar"
        android:textAlignment="viewStart"
        android:textSize="32sp"

        android:textStyle="italic" />
    <TextView
        android:id="@+id/records"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchState"
        android:text="Recordings:"
        android:textSize="30sp" />


</RelativeLayout>
